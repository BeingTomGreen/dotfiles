  name = Tom Green
  email = kingofcuddles@gmail.com

[includeIf "gitdir:~/wfuk/"]
    path = .gitconfig-wfuk

[push]
  default = simple

[core]
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  autocrlf = input

[color]
  ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold # line info
	old = red # deletions
	new = green # additions

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[help]
  autocorrect = 1

[init]
  defaultBranch = master